#!/bin/sh
#
# $Id: comservd.sh.sample,v 1.3 2001/08/12 13:14:36 bsd Exp $
#

if [ -z "$1" ]; then
  action=start
else
  action=$1
fi


case $action in
  start)
    if [ -x /usr/local/sbin/comservd ]; then
      /usr/local/sbin/comservd > /dev/null 2>&1 && echo -n ' comserv'
    fi
    ;;
  stop)
    killall comservd
    ;;
  *)
    echo "comservd.sh: invalid action = \"$action\""
    ;;
esac

